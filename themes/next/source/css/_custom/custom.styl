.sidebar {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  --bg: url(../../images/41.jpeg);
  background-image: var(--bg);
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  justify-content: flex-end!important;
  display: block;
  color: #fff;
  overflow: hidden;
  .sidebar-inner {
    z-index: 10;
    position: relative;
    .sidebar-nav{
      //li {
      //  color: #eee;
      //}
    }
  }
  a {
    color: #fff;
    border-bottom: 1px solid #eee;
  }
  .site-author-image {
    border: none;
  }

  .post-toc ol a{
    color: #bbb;
    border-bottom-color: #bbb;
  }
}

.sidebar::before,
.sidebar::after {
  top: 0px;
  left: 0px;
  content: '';
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
}

.sidebar::before {
  z-index: 10;
  opacity: 0.5;
  background-color: #666;
}

.sidebar::after {
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  -webkit-filter: blur(8px);
  filter: blur(8px);
  background-image: var(--bg);
}

.header{
  .site-meta{
    background:url("../../images/56.jpg") no-repeat;
  }
  .brand{
    background inherit;
    color: #000;
  }
}




